---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Discord Profile | vltc." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg">
		<link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon.svg">
		<link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon.svg">
		<meta name="theme-color" content="#c13030">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		scroll-behavior: smooth;
	}

	/* Webkit Scrollbar Styles */
	::-webkit-scrollbar {
		width: 3px;
		height: 3px;
	}

	::-webkit-scrollbar-track {
		background: transparent;
	}

	::-webkit-scrollbar-thumb {
		background: rgba(193, 48, 48, 0.2);
		border-radius: 100vh;
	}

	::-webkit-scrollbar-thumb:hover {
		background: rgba(193, 48, 48, 0.8);
	}

	/* Only show scrollbar when scrolling */
	::-webkit-scrollbar {
		display: none;
	}

	*:hover::-webkit-scrollbar,
	*:focus::-webkit-scrollbar {
		display: block;
	}

	/* Firefox Scrollbar Styles */
	* {
		scrollbar-width: none;
	}

	*:hover {
		scrollbar-width: thin;
		scrollbar-color: rgba(193, 48, 48, 0.2) transparent;
	}
</style>
